  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "rootDir": "./src/",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "@lib/orm-types/(.*)": "<rootDir>/../libs/orm-types/src/$1",
    "@lib/orm-types": "<rootDir>/../libs/orm-types/src"
  }
}
